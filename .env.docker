# ══════════════════════════════════════════════════════════════════════════════
#  GAM — Docker Environment Configuration
#  Copy to .env when running with Docker: cp .env.docker .env
# ══════════════════════════════════════════════════════════════════════════════

APP_NAME="GAM - Global Asset Management"
APP_ENV=production
APP_KEY=base64:GENERATE_ME_WITH_php_artisan_key_generate
APP_DEBUG=false
APP_URL=http://localhost:8000
APP_PORT=8000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US
APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

# ── MySQL 8.0 (REQ-01) ──────────────────────────────────────────────────────
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=gam
DB_USERNAME=gam
DB_PASSWORD=secret
DB_ROOT_PASSWORD=rootsecret

# ── Redis 7 (REQ-01, REQ-31, REQ-32) ────────────────────────────────────────
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=null
REDIS_CLIENT=phpredis

# ── Session / Cache / Queue ──────────────────────────────────────────────────
SESSION_DRIVER=redis
SESSION_LIFETIME=480
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=redis
QUEUE_CONNECTION=redis
BROADCAST_CONNECTION=soketi
FILESYSTEM_DISK=local

# ── Meilisearch (REQ-22) ────────────────────────────────────────────────────
MEILISEARCH_HOST=http://meilisearch:7700
MEILISEARCH_KEY=masterKey
MEILISEARCH_PORT=7700
SCOUT_DRIVER=meilisearch

# ── AI Tagging (REQ-10) — OpenRouter ─────────────────────────────────────────
OPENAI_API_KEY=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
OPENAI_BASE_URL=https://openrouter.ai/api/v1
OPENAI_ORGANIZATION=
OPENAI_MODEL=openai/gpt-4o-mini
OPENAI_REQUEST_TIMEOUT=120

# ── Soketi WebSocket Server (REQ-29) ────────────────────────────────────────
SOKETI_HOST=soketi
SOKETI_PORT=6001
SOKETI_APP_ID=app-id
SOKETI_APP_KEY=app-key
SOKETI_APP_SECRET=app-secret
PUSHER_APP_ID=app-id
PUSHER_APP_KEY=app-key
PUSHER_APP_SECRET=app-secret
PUSHER_HOST=soketi
PUSHER_PORT=6001
PUSHER_SCHEME=http
VITE_PUSHER_APP_KEY=app-key
VITE_PUSHER_HOST=localhost
VITE_PUSHER_PORT=6001
VITE_PUSHER_SCHEME=http

# ── BookStack (REQ-24) ──────────────────────────────────────────────────────
BOOKSTACK_PORT=6875
BOOKSTACK_APP_URL=http://localhost:6875
BOOKSTACK_TOKEN_ID=
BOOKSTACK_TOKEN_SECRET=

# ── Trilium Notes (REQ-25) ──────────────────────────────────────────────────
TRILIUM_PORT=8081
TRILIUM_TOKEN=

# ── CKAN (REQ-26) ───────────────────────────────────────────────────────────
CKAN_PORT=5000
CKAN_SITE_URL=http://localhost:5000
CKAN_DB_NAME=ckan
CKAN_DB_USER=ckan
CKAN_DB_PASSWORD=ckan_secret
CKAN_API_KEY=
CKAN_ADMIN_USER=admin
CKAN_ADMIN_PASSWORD=admin123
CKAN_ADMIN_EMAIL=admin@gam.local

# ── MySQL Port (exposed to host) ────────────────────────────────────────────
MYSQL_PORT=3306

# ── Mail (log driver for development) ───────────────────────────────────────
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@gam.local"
MAIL_FROM_NAME="${APP_NAME}"

# ── GAM Pipeline ────────────────────────────────────────────────────────────
GAM_AI_THRESHOLD=0.70
GAM_STAGING_DISK=staging
GAM_ASSETS_DISK=assets
GAM_PREVIEWS_DISK=previews

# ── Vite ─────────────────────────────────────────────────────────────────────
VITE_APP_NAME="${APP_NAME}"
